{
  "name": "@bytepulse/pulsewave-server",
  "version": "0.2.1",
  "description": "PulseWave Server SDK - Mediasoup SFU server deployable via Docker or self-hosted",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mediasoup-server": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "Dockerfile",
    "docker-compose.yml"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bytepulseflow/pulsewave.git",
    "directory": "packages/server"
  },
  "homepage": "https://github.com/bytepulseflow/pulsewave#readme",
  "bugs": {
    "url": "https://github.com/bytepulseflow/pulsewave/issues"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "tsx watch src/index.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@bytepulse/pulsewave-shared": "workspace:*",
    "mediasoup": "^3.14.4",
    "ws": "^8.16.0",
    "jsonwebtoken": "^9.0.2",
    "ioredis": "^5.3.2",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "express": "^4.18.2",
    "uuid": "^9.0.1",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "author": {
    "name": "Kaushal Mehta",
    "url": "https://github.com/kaushald4"
  }
}
